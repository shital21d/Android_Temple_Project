<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_registrarion"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/nocolor"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_registration_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Register Here: "
                android:textColor="@color/dark_blue"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_registration_name"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-condensed-light"/>

            <EditText
                android:id="@+id/et_registration_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="name"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_registration_mobileno"
                android:text="Mobile Number:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/et_registration_mobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/phone"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="mobile number"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_registration_email"
                android:text="E-mail:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/et_registration_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/email"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="e-mail"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_registration_username"
                android:text="Username:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/et_registration_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/username"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="username"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_registration_password"
                android:text="Password:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/et_registration_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/lock"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_register"
                android:text="Register"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/img" />

</LinearLayout>